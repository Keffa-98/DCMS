{% extends "formsLayout.njk" %}
{% block form %}
  <form class="bg-white shadow-md  p-10 w-full max-w-lg rounded" action="/auth/signup" method="post">
      <h2 class="text-center p-5 text-2xl font-bold text-gray-700">
    Sign Up
  </h2>
  <p class="pb-5 font-semibold text-sm text-success text-center">Create a new Account</p>
      {% if messages.error %}
      <div class="alert alert-danger text-center">
        {{ messages.error }}
      </div>
      {% endif %}

      {% if messages.success %}
      <div class="alert alert-success text-center">
        {{ messages.success }}
      </div>
      {% endif %}

      <div class="py-3">
        <input type="email" name="email" class="w-full  py-1 px-5 bg-white outline-0 rounded-md border border-gray-200 " placeholder="Email Address">
      </div>
      <div class="py-3">
        <input type="password" name="password" class="w-full px-5 py-1 bg-white outline-none border border-gray-200  rounded-md" placeholder="Password">
      </div>
      <div class="py-5 text-gray-600 text-sm">
        <p>Already have an account?<a class="text-decoration-none text-green-400    px-2" href="/auth/signin">SignIn</a></p>
      </div>
      <div class="py-5">
        <button type="submit" class="text-white font-semibold w-full bg-gray-800 py-1 rounded-md  shadow-inner">Sign Up</button>
      </div>
    </form>
{% endblock %}