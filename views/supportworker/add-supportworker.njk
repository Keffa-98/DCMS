{% extends "base.njk" %} {% block content %}
<div class="p-5 bg-white max-w-3xl mx-auto">
  <form  method="POST" class="space-y-5 p-5">
    <div class="py-5 w-full">
      <p class="text-gray-600 font-semibold text-lg">New Support Worker Form</p>
      <p class="py-2 leading-relaxed text-gray-600">
        Please fill out the form below to add a new support worker to the system. Note
        fields marked with <span class="text-red-400">*</span> are required.
      </p>
    </div>
    {% if error %}
    <div class="bg-red-200 p-3">
      <p class="text-red-600">{{ error }}</p>
    </div>
    {% endif %}
    <p class="py-3 text-gray-500 font-semibold">Personal Information</p>
    <hr class="border-gray-200" />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >First Name</label
        >
        <input
          type="text"
          name="first_name"
          value="{{ form.first_name }}"
          placeholder="First Name"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.first_name %}
        <p class="text-red-600">{{ errors.first_name }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Last Name</label
        >
        <input
          type="text"
          name="last_name"
          value="{{ form.last_name }}"
          placeholder="Last Name"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.last_name %}
        <p class="text-red-600">{{ errors.last_name }}</p>
        {% endif %}
      </div>
    </div>

    <!-- next -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Date of Birth</label
        >
        <input
          type="date"
          name="dob"
          min="1900-01-01"
          max="2021-12-31"
          value="{{ form.dob }}"
          class="border appearance-none border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.dob %}
        <p class="text-red-600">{{ errors.dob }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >User</label
        >
        <select
          class="border bg-sky-50 border-gray-200 py-1 px-3 rounded appearance-none"
          name="user"
        >
          <option value="" selected class="text-gray-400">
            --Select User--
          </option>
          {% for supportworker in supportworkers %}
            
          <option value="{{supportworker.id}}">{{supportworker.email}}</option>
          {% endfor %}
          
        </select>
        {% if errors and errors.user %}
        <p class="text-red-600">{{ errors.user }}</p>
        {% endif %}
      </div>
    </div>
    <hr class="border-gray-200" />
    <p class="py-2 text-gray-500 font-semibold">Address Information</p>
    <!-- next -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Street</label
        >
        <input
          type="text"
          name="street"
          value="{{ form.street }}"
          placeholder="Street"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.street %}
        <p class="text-red-600">{{ errors.street }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >City</label
        >
        <input
          type="text"
          name="city"
          value="{{ form.city }}"
          placeholder="City"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.city %}
        <p class="text-red-600">{{ errors.city }}</p>
        {% endif %}
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >State</label
        >
        <input
          type="text"
          name="state"
          value="{{ form.state }}"
          placeholder="State"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.state %}
        <p class="text-red-600">{{ errors.state }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Zip</label
        >
        <input
          type="text"
          name="zip"
          value="{{ form.zip }}"
          placeholder="Zip"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.zip %}
        <p class="text-red-600">{{ errors.zip }}</p>
        {% endif %}
      </div>
    </div>
    
    <div class="py-5 text-center">
      <button type="submit" class="py-1.5 px-5 rounded bg-green-600 text-white">
        Submit
      </button>
    </div>
  </form>
</div>
{% endblock %}
