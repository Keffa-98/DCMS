{% extends "base.njk" %} {% block content %}
<div class="p-5 bg-white max-w-3xl mx-auto">
  <form method="POST" class="space-y-5 p-5">
    <div class="py-5 w-full">
      <p class="text-gray-600 font-semibold text-lg">
        Add Client Medical Record
      </p>
      {{ req | dump }}
      <p class="py-2 leading-relaxed text-gray-600">
        Please fill out the form below to add client medical record to the
        system. Note fields marked with <span class="text-red-400">*</span> are
        .
      </p>
    </div>
    {% if error %}
    <div class="bg-red-200 p-3">
      <p class="text-red-600">{{ error }}</p>
    </div>
    {% endif %}
    <p class="py-3 text-gray-500 font-semibold">Client Personal Information</p>
    <hr class="border-gray-200" />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Allergies</label
        >
        <input
          type="text"
          name="allergies"
          value="{{ form.allergies }}"
          placeholder="Allergies"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.allergies %}
        <p class="text-red-600">{{ errors.allergies }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for=""
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Chronic Diseases</label
        >
        <input
          type="text"
          name="chronicDiseases"
          value="{{ form.chronicDiseases }}"
          placeholder="Chronic Diseases"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.chronicDiseases %}
        <p class="text-red-600">{{ errors.chronicDiseases }}</p>
        {% endif %}
      </div>
    </div>

    <!-- next -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="notes"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Notes</label
        >

        <textarea
          name="notes"
          rows="2"
          class="border border-gray-200 bg-white outline-none rounded-md p-2"
          placeholder="Client notes..."
        ></textarea>
        {% if errors and errors.notes %}
        <p class="text-red-600">{{ errors.notes }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Disability Type</label
        >
        <select
          class="border border-gray-200 py-1 px-3 rounded appearance-none"
          name="disabilityType"
        >
          <option value="" selected class="text-gray-400">
            --Select Disability Type--
          </option>
          <option value="MobilityImpairments">Mobility Impairments</option>
          <option value="VisionImpairments">Vision Impairments</option>
          <option value="HearingImpairments">Hearing Impairments</option>
          <option value="IntellectualDisabilities">
            Intellectual Disabilities
          </option>
          <option value="AutismSpectrumDisorder">
            Autism Spectrum Disorder
          </option>
          <option value="Epilepsy">Epilepsy</option>
          <option value="CerebralPalsy">Cerebral Palsy</option>
          <option value="DownSyndrome">Down Syndrome</option>
          <option value="MultipleSclerosis">Multiple Sclerosis</option>
          <option value="Depression">Depression</option>
        </select>
        {% if errors and errors.disabilityType %}
        <p class="text-red-600">{{ errors.disabilityType }}</p>
        {% endif %}
      </div>
    </div>
    <hr class="border-gray-200" />
    <p class="py-2 text-gray-500 font-semibold">Medication Information</p>
    <!-- next -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Name</label
        >
        <input
          type="text"
          name="medication_name"
          value="{{ form.medication_name }}"
          placeholder="Medication Name"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.medication_name %}
        <p class="text-red-600">{{ errors.medication_name }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Dosage</label
        >
        <input
          type="text"
          name="medication_dosage"
          value="{{ form.medication_dosage }}"
          placeholder="Dosage"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.medication_dosage %}
        <p class="text-red-600">{{ errors.medication_dosage }}</p>
        {% endif %}
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Frequency</label
        >
        <input
          type="text"
          name="medication_frequency"
          value="{{ form.medication_frequency }}"
          placeholder="Frequency"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.medication_frequency %}
        <p class="text-red-600">{{ errors.medication_frequency }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2"></div>
    </div>

    <div class="py-5 text-center">
      <button type="submit" class="py-1.5 px-5 rounded bg-green-600 text-white">
        Submit
      </button>
    </div>
  </form>
</div>
{% endblock %}
