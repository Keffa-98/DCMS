{% extends "base.njk" %} {% block content %}
<div class="p-5 bg-white max-w-3xl mx-auto">
  <form method="POST" class="space-y-5 p-5">
    <div class="py-5 w-full">
      <p class="text-gray-600 font-semibold text-lg">Add Client Care Plan</p>
      {{ req | dump }}
      <p class="py-2 leading-relaxed text-gray-600">
        Please fill out the form below to add client's care plan to the system.
        Note fields marked with <span class="text-red-400">*</span> are .
      </p>
    </div>
    {% if error %}
    <div class="bg-red-200 p-3">
      <p class="text-red-600">{{ error }}</p>
    </div>
    {% endif %}
    <p class="py-3 text-gray-500 font-semibold">Care Plan Information</p>
    <hr class="border-gray-200" />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Title</label
        >
        <input
          type="text"
          name="title"
          value="{{ form.title }}"
          placeholder="Title"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.title %}
        <p class="text-red-600">{{ errors.title }}</p>
        {% endif %}
      </div>

      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Description</label
        >
        <input
          type="text"
          name="description"
          value="{{ form.description }}"
          placeholder="Description"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.description %}
        <p class="text-red-600">{{ errors.description }}</p>
        {% endif %}
      </div>

      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >Start Date</label
        >
        <input
          type="date"
          name="startDate"
          value="{{ form.startDate }}"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.startDate %}
        <p class="text-red-600">{{ errors.startDate }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label
          for="email"
          class="text-gray-600 text-sm after:content-['*'] after:text-red-400"
          >End Date</label
        >
        <input
          type="date"
          name="endDate"
          value="{{ form.endDate }}"
          class="border border-gray-200 bg-white rounded py-1 px-3"
        />
        {% if errors and errors.endDate %}
        <p class="text-red-600">{{ errors.endDate }}</p>
        {% endif %}
      </div>
    </div>

    <div class="py-5 text-center">
      <button type="submit" class="py-1.5 px-5 rounded bg-green-600 text-white">
        Submit
      </button>
    </div>
  </form>
</div>
{% endblock %}
