{% extends "base.njk" %} {% block content %}
<div class="p-5 bg-white max-w-3xl mx-auto">
  <div class="p-5">
    <p class="text-gray-600 font-semibold text-lg">Add New User</p>
  </div>
  {% if error %}
  <div class="bg-red-200 p-3">
    <p class="text-red-600">{{ error }}</p>
  </div>
  {% endif %}
  <form action="/users/new" method="post" class="p-5">
    <div class="flex flex-col gap-5 p-5">
      <div class="flex flex-col gap-2">
        <label for="email" class="text-gray-600 font-semibold">Email</label>
        <input
          type="email"
          name="email"
          value="{{form.email}}"
          id="email"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.email %}
            <p class="text-red-600">{{ errors.email }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label for="password" class="text-gray-600 font-semibold"
          >Password</label
        >
        <input
          type="password"
          name="password"
          value="{{form.password}}"
          id="password"
          class="border border-gray-200 rounded py-1 px-3"
        />
        {% if errors and errors.password %}
            <p class="text-red-600">{{ errors.password }}</p>
        {% endif %}
      </div>
      <div class="flex flex-col gap-2">
        <label for="role" class="text-gray-600 font-semibold">Role</label>
        <select
          name="role"
          id="role"
          value="{{form.role}}"
          class="border border-gray-200 rounded py-1 px-3"
        >
          <option value="" selected>Select Role</option>
          <option value="ADMIN">Admin</option>
          <option value="SUPPORTWORKER">Support Worker</option>
        </select>
        {% if errors and errors.role %}
            <p class="text-red-600">{{ errors.role }}</p>
        {% endif %}
      </div>
      <div class="flex justify-end">
        <button
          type="submit"
          class="py-1.5 px-5 bg-green-600 rounded text-white"
        >
          Add User
        </button>
      </div>
    </div>
  </form>
</div>
{% endblock %}
